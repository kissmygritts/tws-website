---
layout: layouts/base.njk
---

<main class="w-full">
    
    {# hero #}
    <div class="flex flex-col-reverse md:flex-row h-screen justify-center"
         style="background:
                    linear-gradient(0deg, transparent 0%, #94bbe9 75%),
                    linear-gradient(to top left, #ffff76, transparent),
                    linear-gradient(20deg, #ffc14e, transparent);
                background-blend-mode: screen;"
    >
        {# left column #}
        <div class="flex flex-col w-full md:w-3/5 text-center justify-center items-start pt-4 px-4 md:px-16 lg:px-32 text-gray-800">
            <h1 class="my-4 text-3xl font-bold leading-tight w-full">Nevada Wildlife Society</h1>
            <p class="leading-normal w-full">
                The Wildlife Society was founded in 1937 and is an international
                non-profit scientific and educational association dedicated to 
                excellence in wildlife stewardship through science and education.
            </p>
            <a 
                href="https://www.wildlifeprofessional.org/western/mem_reg.php"
                class="mx-auto hover:underline text-gray-800 font-bold rounded-full my-6 py-4 px-8 shadow-xl hover:shadow-2xl bg-transparent border-gray-800 border-2"
            >
                Become A Member
            </a>
        </div>

        {# right column #}
        <div class="w-full md:w-2/5 flex content-center justify-center p-4">
            <img src="/static/images/nv-logo.png" class="object-none" />
        </div>
    </div>

    {# upcoming events #}
    <div class="pt-6 pb-12 bg-orange-100 text-gray-800">
        <h2 class="text-2xl text-center">Upcoming Events</h2>

        <div class="contianer mx-auto mt-4 text-center">
            <div>
                <a href="http://tws-west.org/redding2020/" class="text-lg text-orange-600 hover:underline">Western Section Meeting</a>
                <p class="text-gray-700">Feb. 3 - 7 &bull; Redding, CA</p>
            </div>
            <div class="mt-4">
                <a href="https://www.eventbrite.com/e/2020-nv-tws-science-symposium-tickets-86453118605" class="text-lg text-orange-600 hover:underline">Nevada Chapter Science Symposium</a>
                <p class="text-gray-700">Mar. 3 - 4 &bull; Reno, NV</p>
            </div>
            <div class="mt-4">
                <p class="text-lg text-gray-700">Raven Management Workshop & Forum</p>
                <p class="text-gray-700">Apr. 21 - 23 &bull; Elko, CA</p>
            </div>
        </div>
    </div>

    {# recent posts section #}
    <div class="pt-6 pb-12 bg-gray-200">
        <div class="">
            <h2 class="text-2xl text-center text-gray-800">Recent Articles</h2>

            <div class="container w-100 lg:w-4/5 mx-auto flex flex-col">
                
                {# cards #}
                {% for post in collections.post | reverse %}
                {% set imgUrl = post.data.image %}

                <div class="flex flex-col md:flex-row bg-white rounded-lg shadow-xl overflow-hidden mt-4 w-100 mx-2">

                    <div class="h-64 md:h-48 w-full md:w-1/3">
                        <img class="object-cover h-full w-full" src="{{ imgUrl }}" />
                    </div>

                    <div class="w-full py-4 px-6 text-gray-800 flex flex-col justify-between">
                        <a class="hover:underline text-orange-600" href="{{ post.url }}">
                            <h3 class="font-semibold text-lg leading-tight truncate">{{ post.data.title }}</h3>
                        </a>
                        <p class="mt-2">
                            {{ post.data.excerpt }}
                        </p>
                        <p class="text-sm text-gray-700 uppercase tracking-wide font-semibold mt-2">
                            {{ post.data.author }} &bull; {{ post.data.date }}
                        </p>
                    </div>
                </div>

                {% endfor %}

            </div>

        </div>
    </div>

    {# board members #}
    <div class="py-6">
        <h2 class="text-2xl text-center text-gray-800">Governance</h2>
        <p class="text-lg text-center text-gray-800">Meet the board members</p>

        <div class="container w-3/4 mx-auto mt-4 flex flex-wrap justify-center">
            {% for i in boardMembers %}
            <div class="bg-white p-4 my-4 mx-4"
                 style="width: 260px;"
            >
                <img class="w-32 h-32 object-cover rounded-full mx-auto shadow-lg" src="{{ i.img }}" />
                <div class="mt-4 text-center">
                    <p class="text-gray-700 uppercase text-sm text-orange-600 font-light tracking-wider">{{ i.position }}</p>
                    <p class="text-gray-800">{{ i.name }}</p>
                </div>

            </div>

            {% endfor %}
        </div>
    </div>

    {# footer #}
    <footer class="bg-gray-800 p-4">
        <p class="text-center text-gray-500 text-sm">Unlicense 2020</p>
    </footer>
</main>